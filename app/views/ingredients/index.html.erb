<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-4">

  </div>
  <div class="col-4">
    <h1 class="font-weight-bold text-center text-info">Ingredientes</h1>

    <table class="table table-hover">
      <thead>
      <tr>
        <th>Descrição</th>
        <th colspan="3" style="width: 30%"></th>
      </tr>
      </thead>

      <tbody>
      <% @ingredients.each do |ingredient| %>
        <tr>
          <td><%= ingredient.description %></td>
          <td><%= link_to 'Exibir', ingredient, :class => 'btn btn-outline-info' %></td>
          <td><%= link_to 'Editar', edit_ingredient_path(ingredient), :class => 'btn btn-outline-warning' %></td>
          <td><%= link_to 'Excluir', ingredient, method: :delete, :class => 'btn btn-outline-danger', data: { confirm: 'Deseja me excluir?' } %></td>
        </tr>
      <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'Novo Ingrediente', new_ingredient_path, :class => 'btn btn-outline-success' %>

  </div>
</div>
