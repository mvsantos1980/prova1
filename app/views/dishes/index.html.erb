<p id="notice"><%= notice %></p>

<h1 class="font-weight-bold text-info text-center">Pratos</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Pre√ßo</th>
      <th>Tempo de preparo</th>
      <th>Restaurante</th>
      <th>Categoria</th>
      <th>Ingredientes</th>
      <th colspan="3" style="width: 15%"></th>
    </tr>
  </thead>

  <tbody>
    <% @dishes.each do |dish| %>
      <tr>
        <td><%= dish.name %></td>
        <td>R<%= number_to_currency dish.price %></td>
        <td><%= formatar_hora dish.timePreparation %></td>
        <td><%= dish.restaurant.name %></td>
        <td><%= dish.category.description %></td>
        <td><small>| </small>
          <% dish.ingredients.order(:description).each do |ing| %>
            <%= ing.description %><small> |</small>
          <% end %>
        </td>
        <td><%= link_to 'Exibir', dish, :class => 'btn btn-outline-success' %></td>
        <td><%= link_to 'Editar', edit_dish_path(dish), :class => 'btn btn-outline-warning' %></td>
        <td><%= link_to 'Excluir', dish, method: :delete, :class => 'btn btn-outline-danger', data: { confirm: 'Deseja excluir?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo prato', new_dish_path, :class => 'btn btn-outline-success' %>
